             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlSystemViewer.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200"
             FontFamily="MicrosoftSansSerif" FontSize="18" Foreground="#1b2338" Background="#f6f6f6">
    <Grid>
        <WrapPanel>
            <Image x:Name="LinkSignal" Margin="15,5,15,5" Width="20" Height="20"/>
            <Label x:Name="TitleName" Content="TitleName" VerticalAlignment="Center"/>
        </WrapPanel>
    </Grid>
