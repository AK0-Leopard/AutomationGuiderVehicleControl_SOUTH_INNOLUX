<Window x:Class="ControlSystemViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlSystemViewer"
        xmlns:v="clr-namespace:ControlSystemViewer.Views"
        mc:Ignorable="d"
        Title="{DynamicResource WINDOW_TITLE}" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="SingleBorderWindow" KeyDown="Window_KeyDown">
    <Grid>
        <v:MainView x:Name="MainView" Height="Auto" Width="Auto"/>
        <v:Loading x:Name="Loading" Height="Auto" Width="Auto"/>
    </Grid>
</Window>
